<h1>School Information for <%= link_to "#{@school.name}", "/schools/#{@school.id}"  %></h1>

  <h3>School Name: <%= link_to "#{@school.name}", "/schools/#{@school.id}" %></h3>
  <p>School ID: <%= @school.id %></p>
  <p>Number of Teachers: <%= @school.number_of_teachers %> </p>
  <p>Is it public? <%= @school.is_public %> </p>

<%= link_to "Update School", "/schools/#{@school.id}/edit" %>
<%= link_to "Delete School", "/schools/#{@school.id}", method: :delete %>
<%= link_to "Student List", "/schools/#{@school.id}/students" %>

